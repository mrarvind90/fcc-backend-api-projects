{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"no-await-in-loop": "error",
		"no-mixed-spaces-and-tabs": "off",
		"no-tabs": "off",
		"consistent-return": "error",
		"no-unused-vars": "warn",
		"prefer-const": [
			"error",
			{
				"destructuring": "all"
			}
		],
		"prefer-destructuring": [
			"error",
			{
				"array": true,
				"object": true
			},
			{
				"enforceForRenamedProperties": false
			}
		]
	}
}
